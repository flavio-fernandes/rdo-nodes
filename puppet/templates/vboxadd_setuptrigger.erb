start()
{
    VBOXADD_SETUP_NEEDED_FILE='/home/vagrant/vboxadd_setup_is_needed'
    VBOXADD_EXEC='/etc/init.d/vboxadd'

    if [ -f ${VBOXADD_SETUP_NEEDED_FILE} ];
    then
	${VBOXADD_EXEC} setup
        rc=$?; if [[ $rc != 0 ]]; then return $rc; fi
	rm -f ${VBOXADD_SETUP_NEEDED_FILE}
    else
        echo 'vboxadd setup is not needed'
    fi
    return 0
}

stop()
{
    return 0
}

restart()
{
    stop && start
    return 0
}

setup()
{
    return 0
}

cleanup()
{
    return 0
}

dmnstatus()
{
    return 0
}

case "$1" in
start)
    start
    ;;
stop)
    stop
    ;;
restart)
    restart
    ;;
setup)
    setup
    ;;
cleanup)
    cleanup
    ;;
status)
    dmnstatus
    ;;
*)
    echo "Usage: $0 {start|stop|restart|status|setup}"
    exit 1
esac

exit
